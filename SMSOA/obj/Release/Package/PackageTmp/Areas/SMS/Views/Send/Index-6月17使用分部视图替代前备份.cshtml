                contentType: 'application/json;charset=utf-8',//注意此处必须注明为json格式，否则后台控制器无法通过Model的方式接收
                async: false,
                type: 'POST',
                success: function (data) {

                    //alert(data);
                    $("#message").textbox('setValue',data);
                }

            })
        }

