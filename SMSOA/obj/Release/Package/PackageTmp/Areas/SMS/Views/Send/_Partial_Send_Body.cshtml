<div class="easyui-layout" id="body_layout" style="width:100%;height:91%;" >
    <div data-options="region:'east',split:true" title="联系人列表" @*dataoptions="fit:true"*@ style="width:230px;">
        <table class="easyui-datagrid" id="persondatagrid" data-options="" style="width:100%;"></table>
    </div>
    <div data-options="region:'center'" title="短信编辑" style="width:70%">
            <div style="padding:10px 30px 20px 30px">
                <form id="ff" method="post">
                    <table cellspacing="10" style="font-size:15px;">
                        <tr>
                            <td>短信任务:</td>
                            <td class="comment">
                                <select class="easyui-combogrid" name="smsMission" id="smsMission_combogrid" style="width:150px"></select><br />
                                请先选择短信任务种类
                            </td>
                        </tr>
                        <tr>
                            <td>修改群组:</td>
                            <td class="comment">
                                <select class="easyui-combogrid" id="group_combogrid" multiple name="group" style="width:150px"></select><br />
                                选择指定群组中的全部联系人
                                @*<input id="sb" class="easyui-switchbutton" checked style="width:60px;height:30px">*@
                            </td>
                        </tr>
                        <tr>
                            <td>修改部门:</td>
                            <td class="comment">
                                <select class="easyui-combotree" name="PDID" id="DepartmentName_combotree" panelHeight="auto" style="width:150px" multiple data-options=""></select><br />
                                选择指定部门中的全部联系人
                                @*<input id="sb" class="easyui-switchbutton" checked style="width:60px;height:30px">*@
                            </td>
                        </tr>
                        <tr>
                            <td>设置常用任务及群组:</td>
                            <td class="comment">
                                <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-add'" onclick="showEditWindow()">设置</a><br />
                                设置你常用的短信任务及常用的群组
                            </td>
                        </tr>
                        <tr>
                            <td>短信内容:</td>
                            <td colspan="3" class="comment"><input class="easyui-textbox" name="message" id="message" data-options="multiline:true,prompt:'输入短信内容...'" style="height:200px;width:400px"></td>
                        </tr>
                    </table>
                </form>
                <div data-options="region:'south',border:false" style="text-align:right;height:38px; padding:5px 0 0;">
                    <a class="easyui-linkbutton c6" style="margin-bottom:5px;width:20%" data-options="iconCls:'icon-ok'" onclick="DoSend()" style="width:80px">发送短信</a>
                    <a class="easyui-linkbutton c2" style="margin-bottom:5px;width:20%" data-options="iconCls:'icon-cancel'" href="javascript:void(0)" onclick="ClearContent()" style="width:80px">清除</a>
                    @*<a class="easyui-linkbutton c5" style="margin-bottom:5px;width:20%" data-options="iconCls:'icon-cancel'" href="javascript:void(0)" onclick="CancelSend()" style="width:80px">取消</a>*@
                </div>
            </div>


    </div>
        
    </div>
