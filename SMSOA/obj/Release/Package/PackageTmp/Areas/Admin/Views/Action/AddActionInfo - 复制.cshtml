@model PMS.Model.ActionInfo

@{
    ViewBag.Title = "AddActionInfo";
}

<h2>AddActionInfo</h2>
<style type="text/css">
    /*#modifyTb {
        width: 400px;
        border: 1px solid #0094ff;
        margin: 10px auto;
        border-collapse: collapse;
    }*/
    .form-group{
        margin:2px;
    }
    .mytextbox{
        height: 23px;
    }
        /*#modifyTb td, #modifyTb th {
            border: 1px solid #0094ff;
            padding: 4px;
        }*/
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 >ActionInfo</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <h6>权限名称</h6>            
            <div class="col-md-5">
                @*@Html.EditorFor(model => model.ActionInfoName, new { htmlAttributes = new { @class = "form-control", height = "23px" } })*@
                @Html.TextBoxFor(model => model.ActionInfoName, new { htmlAttributes = new { @class = "form-control" ,style="height:20px"} })
                @Html.ValidationMessageFor(model => model.ActionInfoName, "", new { @class = "text-danger" })
            </div>
        </div>       

        <div class="form-group" style="margin-bottom:0px;">
            @Html.LabelFor(model => model.DelFlag, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <div class="checkbox">
                    @Html.TextBoxFor(model => model.DelFlag)
                    @Html.ValidationMessageFor(model => model.DelFlag, "", new { @class = "text-danger" })
                </div>
            </div>
        </div> 
        <div class="form-group">
            <h4>备注</h4>    
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group"  >
            <h4>Url地址</h4> 
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" >
            <h4>权限名称</h4> 
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ActionMethodName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActionMethodName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" >
            <h4>控制器名称</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ControllerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ControllerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>顺序</h4> 
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Sort, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sort, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>请求类型</h4> 
            <div class="col-md-10">
                <td>@Html.DropDownListFor(model => model.ActionTypeEnum, ViewBag.httpMethodList as IEnumerable<SelectListItem>)</td>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MenuIcon, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MenuIcon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MenuIcon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IconWidth, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.IconWidth, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IconWidth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IconHeight, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.IconHeight, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IconHeight, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>区域名称</h4> 
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AreaName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AreaName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>上级菜单</h4> 
            <div class="col-md-10">
                <select class="easyui-combobox" id="ParentActionOptions" style="width:100px" name="ParentID" data-options="data: @ViewBag.data ,                            panelHeight:'auto',valueField: 'id',textField: 'text'"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
