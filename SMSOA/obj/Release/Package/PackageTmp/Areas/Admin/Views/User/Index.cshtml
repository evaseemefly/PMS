        $(function () {
            //1 编辑窗口关闭
            $("#editWindow").window('close');
            $("#addWindow").window('close');
            $("#showRoleWindow").window('close');
            $("#showActionWindow").window('close');
            //2 位datagrid加载数据
            $("#datagrid").datagrid({
                width: 'auto',
                height: 'auto',
