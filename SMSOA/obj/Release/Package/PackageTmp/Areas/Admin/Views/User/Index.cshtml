        function afterEdit(msg,type) {
            //editWindow
            //1 关闭加载的iframe页面
            $.messager.alert('提示', msg);
            if (type == 0) {
                $("#editWindow").window('close');
                //2 刷新当前页面
                $("#datagrid").datagrid('reload');
