<div style="height:50%;width:100%;">
    @*<div style="height:50%;width:99.5%;border:1px dashed #ffffff">*@
        <div class="easyui-datagrid" id="datagrid_person" data-options="toolbar:'#tb1'" style="margin:2px;"></div>
    @*<div class="easyui-datagrid" id="datagrid_person" data-options="toolbar:'#tb1'" style="margin:2px;border:1px dashed #4cff00"></div>*@
        <div id="tb1" style="padding:2px 5px;">
            <table cellspacing="5" style="font-size:15px">
                <tr>
                    <td>指定联系人名称</td>
                    <td><input class="easyui-validatebox" type="text" id="personName" style="width:200px" data-options="@*validType:['CHS','length[1,5]']*@"></td>
                    <td>匹配电话号码</td>
                    <td><input class="easyui-validatebox" type="text" id="personPhoneNum" style="width:200px" data-options="@*validType:'Mobile'*@"></td>
                    <td><a class="easyui-linkbutton" iconCls="icon-search" onclick="searchPerson()">查询</a></td>
                </tr>
            </table>
        </div>
    </div>
