<script type="text/javascript">
    function getAllList() {
        var obj = {
            attributes: {},
            setAttribute: function (name, value) {
                //首先，要先获取添加的属性的存放位置。
                var attr = this.attributes;
                //检查新添加的方法，是不是已经存在,如果不存在，则进行添加
                if(name in attr){
                    //对于我们这里，检查这个其实可有可无，因为不管是有没有存在，添加值是使用的同样的方法，但这个检测在写代码时，都是要考虑的，所以就加这么一个无意义的判断吧。
                    attr[name] = value;
                }else{
                    attr[name] = value;
                }
            }

            }


        obj.setAttribute("url", "/News/Home/NewsListShow");
        obj.text = "全部消息";
        //obj.setAttribute("url", "123");
        //obj["url"] = "123";
        window.parent.createTabs(obj);
    }
</script>

