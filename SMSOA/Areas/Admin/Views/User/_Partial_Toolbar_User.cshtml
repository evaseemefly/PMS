<div id="tb" style="padding:2px 5px;">
    <a href="#" class="easyui-linkbutton" istb="true" id="add_user" data-options="iconCls:'icon-add',text: '@Resources.Language.New',plain:true" onclick="addRow()"></a>
    <a href="#" class="easyui-linkbutton" id="del_user" data-options="iconCls:'icon-remove',text: '@Resources.Language.Delete',plain:true" onclick="removeRow()"></a>
    <a href="#" class="easyui-linkbutton" id="edit_user" data-options="iconCls:'icon-edit',text: '@Resources.Language.Edit',plain:true" onclick="editRow()"></a>
    <a href="#" class="easyui-linkbutton" id="assignRole_user" data-options="iconCls:'icon-search',text: '@Resources.Language.UsersRoleSetting',plain:true" onclick="AssignRole()"></a>
    <a href="#" class="easyui-linkbutton" id="assignAction_user" data-options="iconCls:'icon-search',text: '@Resources.Language.UsersRightsSettings',plain:true" onclick="AssignAction()"></a>
    <a href="#" class="easyui-linkbutton" id="resetPassword_user" data-options="iconCls:'icon-key-16',text: '@Resources.Language.ResetPassword',plain:true" onclick="ResetPassword()"></a>
    <br />
    @Resources.Language.QueryUserName<input class="easyui-validatebox" type="text" id="queryByUserName" style="width:'50%'" data-options="">
    @Resources.Language.QueryRemarks<input class="easyui-validatebox" type="text" id="queryByRemark" style="width:'50%'" data-options="">
    <a class="easyui-linkbutton" iconCls="icon-search" onclick="searchBy()">@Resources.Language.Go</a>
</div>
